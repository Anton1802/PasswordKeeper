<ControlScreenView>
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Password Keeper"
            right_action_items:
                [
                ['sync', lambda x: root.model.sync_accounts()],
                ['delete', lambda x: root.controller.remove_accounts()],
                ['plus', lambda x: root.show_dialogue_add_account()],
                ]


        MDScrollView:

            MDList:
                id: container_accounts



