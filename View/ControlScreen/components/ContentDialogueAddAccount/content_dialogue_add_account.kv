<ContentDialogueAddAccount>
    orientation: "vertical"
    spacing: "12dp"
    padding: "12dp"
    size_hint_y: None
    height: "380dp"

    MDTextField:
        id: dialogue_name_field
        hint_text: "Name"
        helper_text: "Required to fill. Maxlength: 80"

    MDTextField:
        id: dialogue_username_field
        hint_text: "Username"
        helper_text: "Required to fill. Maxlength: 80"

    MDTextField:
        id: dialogue_password_field
        hint_text: "Password"
        password: True
        helper_text: "Required to fill. Maxlength: 80"

    MDTextField:
        id: dialogue_url_field
        hint_text: "Url"
        helper_text: "Example: www.example.com"

    BoxLayout:
        orientation: "horizontal"
        MDLabel:
            text: "Icon:"
            halign: "left"
            valign: "center"
            color: "#808080"
            underline: True
        MDCarousel:
            id: carousel_icons
            size_hint_x: .2
            MDIconButton:
                icon: root.icons["default"]
                on_press: root.button_active
            MDIconButton:
                icon: root.icons["vk"]
            MDIconButton:
                icon: root.icons["google"]
            MDIconButton:
                icon: root.icons["yandex"]
            MDIconButton:
                icon: root.icons["mail.ru"]
            MDIconButton:
                icon: root.icons["aliexpress"]
            MDIconButton:
                icon: root.icons["facebook"]
            MDIconButton:
                icon: root.icons["github"]

