<MainScreenView>
    FloatLayout:
        MDRaisedButton:
            id: sign_in_button
            pos_hint: {"right": .972, "top": .98}
            text: "Sign In"
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_y: None
            size_hint_x: .8
            spacing: 15
            height: self.minimum_height
            MDLabel:
                text: "Password Keeper"
                halign: "center"
            MDTextField:
                id: register_username_textfield
                hint_text: "Username"
            MDTextField:
                id: register_password_textfield
                hint_text: "Master-password"
            MDRaisedButton:
                id: sign_up_button
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Sign Up"





